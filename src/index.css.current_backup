/* Intro Animation: Appear, Fast Rotate, Point, Buggy Disappear */
@keyframes arrow-intro-sequence {
  0% {
    opacity: 0;
    transform: rotate(90deg) scale(0.8);
  }

  10% {
    opacity: 1;
    transform: rotate(360deg) scale(1.1);
  }

  20% {
    transform: rotate(0deg) scale(1);
    /* Pointing Left */
  }

  60% {
    transform: rotate(0deg) scale(1);
    /* Stay pointing */
    opacity: 1;
    filter: blur(0px);
  }

  /* Buggy Disappear Phase */
  65% {
    transform: translate(2px, -2px) rotate(2deg);
    filter: blur(1px);
    opacity: 0.8;
  }

  70% {
    transform: translate(-2px, 2px) rotate(-2deg);
    filter: blur(0px);
    opacity: 0.6;
  }

  75% {
    transform: translate(0, 0) rotate(0deg);
    filter: blur(2px);
    opacity: 0.4;
  }

  100% {
    transform: rotate(0deg);
    opacity: 0;
    filter: blur(0px);
  }
}

