  --mk-focus: #194D25;
  --mk-focus-offset: 2px;
}

button:focus-visible,
[role='button']:focus-visible,
input:focus-visible,
select:focus-visible,
textarea:focus-visible,
a:focus-visible {
  outline: 2px solid var(--mk-focus);
  outline-offset: var(--mk-focus-offset);
}

